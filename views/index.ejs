  <div class="container-xl">
    <div class="row row-cols-3">
    <% for(let i of produtos) { %>
      <div class="col">
        <div class="card mb-3 pt-3">
          <div class="card-body">
            <img src="/img/<%= i.img %>" alt="" class="img-fluid">
            <h5 class="card-title"><%= i.nome %></h5>
            <p><%= i.desc %></p>
            <p class="card-text fs-5 text-danger">R$ <%= i.preco %></p>
            <a href="/produtos/<%= i.id %>" class="btn btn-danger text-end">Ver mais</a>
          </div>
        </div>
      </div>
    <% } %>
    </div>

