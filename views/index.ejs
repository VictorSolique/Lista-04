<!DOCTYPE html>
<html lang="pt-br">
<head>
  <title>Projeto Express e EJS</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar bg-body-tertiary mb-3">
    <div class="container-fluid">
      <a class="text-center navbar-brand text-danger nav-link ms-3 fs-2 " href="#">CARROS DE LUXO</a>
      <div class="d-flex" >
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Produtos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"><span class="material-symbols-outlined px-2">account_circle</span><span class="align-top">Entrar</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"><span class="material-symbols-outlined px-2">forum</span>
            <span class="align-top">Contato</span></a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container-xl">
    <div class="row row-cols-3">
    <% for(let i of produtos) { %>
      <div class="col">
        <div class="card mb-3 pt-3">
          <div class="card-body">
            <img src="/img/<%= i.img %>" class="img-fluid">
            <h5 class="card-title"><%= i.nome %></h5>
            <p><%= i.desc %></p>
            <p class="card-text fs-5 text-danger">R$ <%= i.preco %></p>
            <a href="/produtos/<%= i.id %>" class="btn btn-danger text-end">Ver mais</a>
          </div>
        </div>
      </div>
    <% } %>
    </div>
  </div>
  <footer class="text-center align-middle mt-3 bg-dark text-light py-2">
      <p class="pt-3">Â© 2002-2023 Carros de Luxo S.A. Todos os direitos reservados.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>